<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculateBMI">

    <TextView
        android:id="@+id/CalBMItxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Calculate BMI"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/caltxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="การคำนวณหาดัชนีมวลกาย"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- WEIGHT -->
    <!-- จัด lineaerlayout เป็น horizontal
    เพื่อให้ textView กับ textfeild ต่อกัน -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <!-- Enter score -->
        <TextView
            android:id="@+id/EnterWeighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Enter Weight : "
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- text feild -->
        <EditText
            android:id="@+id/input1"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:text="ใส่น้ำหนักเป็นหน่วยกิโลกรัม" />
    </LinearLayout>

    <!-- HEIGHT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <!-- Enter score -->
        <TextView
            android:id="@+id/EnterHeighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Enter Height : "
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- text feild -->
        <EditText
            android:id="@+id/input2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:text="ใส่ส่วนสูงเป็นหน่วยเซนติเมตร" />
    </LinearLayout>
    <!-- จัด lineaerlayout เป็นปกติ
    และ set center button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/CalBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate" />

    </LinearLayout>

    <!-- จัด lineaerlayout เป็น horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/Weighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Weight : "
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/output1"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="text"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/Heighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Height : "
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/output2"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="text"
            android:text="" />
    </LinearLayout>

    <!-- Total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/Totaltxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Total : "
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/output3"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="text"
            android:text="" />

    </LinearLayout>

    <!-- set left button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:gravity="left">

        <Button
            android:id="@+id/BackBMIBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />

    </LinearLayout>
</LinearLayout>